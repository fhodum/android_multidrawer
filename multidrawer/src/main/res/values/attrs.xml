<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiDrawerView">
        <attr name="side" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="buttonPaddingTop" format="dimension"/>
        <attr name="buttonPaddingLeft" format="dimension"/>
        <attr name="buttonPaddingBottom" format="dimension"/>
        <attr name="buttonPaddingRight" format="dimension"/>

        <!-- These two values default to wrap_content" -->
        <attr name="buttonLayoutHeight" format="dimension"/>
        <attr name="buttonLayoutWidth" format="dimension"/>

        <attr name="buttonSelectBackgroundColor" format="color"/>
        <attr name="buttonSelectionBackgroundDrawable" format="reference"/>
        <attr name="animationOpenCloseTime" format="integer"/>
        <attr name="deselectedButtonFadeTime" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="multiDrawerViewStyle" format="reference"/>
    </declare-styleable>

</resources>