<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <style name="MyAppMultiDrawerStyleLeft" parent="@style/MultiDrawerTheme.MultiDrawerViewStyle">
        <item name="buttonLayoutHeight">@dimen/drawerButtonHeight</item>
        <item name="buttonLayoutWidth">@dimen/drawerButtonWidth</item>
        <item name="deselectedButtonFadeTime">300</item>
        <item name="buttonPaddingTop" > 3dp</item>
        <item name="buttonPaddingLeft" > 0dp</item>
        <item name="buttonPaddingBottom"> 3dp</item>
        <item name="buttonPaddingRight">2dp</item>
        <item name="side">left</item>
    </style>

    <style name="MyAppMultiDrawerStyleRight" parent="@style/MultiDrawerTheme.MultiDrawerViewStyle">
        <item name="buttonLayoutHeight">@dimen/drawerButtonHeight</item>
        <item name="buttonLayoutWidth">@dimen/drawerButtonWidth</item>
        <item name="deselectedButtonFadeTime">300</item>
        <item name="buttonPaddingTop" > 3dp</item>
        <item name="buttonPaddingLeft" > 2dp</item>
        <item name="buttonPaddingBottom"> 3dp</item>
        <item name="buttonPaddingRight">0dp</item>
        <item name="side">right</item>
    </style>
</resources>
