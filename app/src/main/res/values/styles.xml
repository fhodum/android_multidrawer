<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>


    <style name="MyAppMultiDrawerStyleLeft" parent="@style/MultiDrawerTheme.LeftRightMultiDrawerViewStyle">
        <item name="multiDrawerButtonLayoutHeight">@dimen/drawerButtonHeight</item>
        <item name="multiDrawerButtonLayoutWidth">@dimen/drawerButtonWidth</item>
        <item name="multiDrawerDeselectedButtonFadeTime">300</item>
        <item name="multiDrawerButtonPaddingTop" > 3dp</item>
        <item name="multiDrawerButtonPaddingLeft" > 0dp</item>
        <item name="multiDrawerButtonPaddingBottom"> 3dp</item>
        <item name="multiDrawerButtonPaddingRight">2dp</item>
        <item name="leftRightDrawerSide">left</item>
    </style>

    <style name="MyAppMultiDrawerStyleRight" parent="@style/MultiDrawerTheme.LeftRightMultiDrawerViewStyle">
        <item name="multiDrawerButtonLayoutHeight">@dimen/drawerButtonHeight</item>
        <item name="multiDrawerButtonLayoutWidth">@dimen/drawerButtonWidth</item>
        <item name="multiDrawerDeselectedButtonFadeTime">300</item>
        <item name="multiDrawerButtonPaddingTop" > 3dp</item>
        <item name="multiDrawerButtonPaddingLeft" > 2dp</item>
        <item name="multiDrawerButtonPaddingBottom"> 3dp</item>
        <item name="multiDrawerButtonPaddingRight">0dp</item>
        <item name="leftRightDrawerSide">right</item>
    </style>

    <style name="MyAppMultiDrawerStyleBottom" parent="@style/MultiDrawerTheme.TopBottomMultiDrawerViewStyle">
        <item name="multiDrawerButtonLayoutHeight">@dimen/drawerButtonWidth</item>
        <item name="multiDrawerButtonLayoutWidth">@dimen/drawerButtonHeight</item>
        <item name="multiDrawerDeselectedButtonFadeTime">300</item>
        <item name="multiDrawerButtonPaddingTop" > 3dp</item>
        <item name="multiDrawerButtonPaddingLeft" > 2dp</item>
        <item name="multiDrawerButtonPaddingBottom"> 0dp</item>
        <item name="multiDrawerButtonPaddingRight">2dp</item>
    </style>

    <style name="MyAppMultiDrawerStyleTop" parent="@style/MultiDrawerTheme.TopBottomMultiDrawerViewStyle">
        <item name="multiDrawerButtonLayoutHeight">@dimen/drawerButtonWidth</item>
        <item name="multiDrawerButtonLayoutWidth">@dimen/drawerButtonHeight</item>
        <item name="multiDrawerDeselectedButtonFadeTime">300</item>
        <item name="multiDrawerButtonPaddingTop" > 3dp</item>
        <item name="multiDrawerButtonPaddingLeft" > 2dp</item>
        <item name="multiDrawerButtonPaddingBottom"> 0dp</item>
        <item name="multiDrawerButtonPaddingRight">2dp</item>

        <item name="topBottomDrawerSide">top</item>
    </style>
</resources>
